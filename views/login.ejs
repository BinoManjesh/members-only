<%- include("header", {title: "Log In"}) %>

<main class="p-5 flex flex-col gap-5 items-center">
  <h2 class="text-5xl text-center">Log In</h2>
  <form
    action="/login"
    method="post"
    class="bg-blue-400 rounded-lg shadow-lg flex flex-col p-10 gap-5"
  >
    <div class="flex flex-col">
      <label for="username">Username</label>
      <input
        type="text"
        id="username"
        name="username"
        value="<%= locals.username %>"
      />
    </div>

    <div class="flex flex-col">
      <label for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= locals.password %>"
      />
    </div>

    <button class="btn-submit">Submit</button>
  </form>
  <% if (error) { %>
  <div class="errors">Incorrect username or password</div>
  <% } %>
</main>

<%- include("footer") %>
