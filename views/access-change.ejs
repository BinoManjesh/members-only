<%- include("header", {title: "Change Membership"}) %>

<main class="p-5 flex flex-col gap-5 items-center">
  <h2 class="text-5xl text-center">Change Membership</h2>
  <form
    method="post"
    class="bg-blue-400 rounded-lg shadow-lg flex flex-col p-10 gap-5"
  >
    <div class="flex flex-col">
      <label for="accessLevel">Membership Type</label>
      <select id="accessLevel" name="accessLevel">
        <option
          value="0"
          <% if (currentUser.accessLevel == 0) { %> selected="" <% } %>
        >
          None
        </option>
        <option
          value="1"
          <% if (currentUser.accessLevel == 1) { %> selected="" <% } %>
        >
          Member
        </option>
        <option
          value="2"
          <% if (currentUser.accessLevel == 2) { %> selected="" <% } %>
        >
          Admin
        </option>
      </select>
    </div>

    <div class="flex flex-col">
      <label for="password">Membership Password</label>
      <input
        type="password"
        id="password"
        name="password"
        value="<%= locals.password %>"
      />
    </div>

    <button class="btn-submit">Submit</button>
  </form>
  <% if (locals.errors) { %>
  <div class="errors">
    <ul>
      <% for (error of errors) { %>
      <li><%= error.msg %></li>
      <% } %>
    </ul>
  </div>
  <% } %>
</main>

<%- include("footer") %>
