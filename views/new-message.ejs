<%- include("header", {title: "New Message"}) %>

<main class="p-5 flex flex-col gap-5 items-center">
  <h2 class="text-5xl text-center">New Message</h2>
  <form
    method="post"
    class="bg-blue-400 rounded-lg shadow-lg flex flex-col p-10 gap-5"
  >
    <div class="flex flex-col">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= locals.title %>" />
    </div>

    <div class="flex flex-col">
      <label for="content">Content</label>
      <textarea id="content" name="content"> <%= locals.content %> </textarea>
    </div>

    <button class="btn-submit">Submit</button>
  </form>
</main>

<%- include("footer") %>
