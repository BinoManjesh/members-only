<!DOCTYPE html>
<html>
  <head>
    <title>New Message</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h2>New Message</h2>
    <form method="post">
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= locals.title %>" />

      <label for="content">Content</label>
      <textarea id="content" name="content"> <%= locals.content %> </textarea>

      <button>Submit</button>
    </form>
    <% if (locals.errors) { %>
    <div>
      <ul>
        <% for (error of errors) { %>
        <li><%= error.msg %></li>
        <% } %>
      </ul>
    </div>
    <% } %>
  </body>
</html>
